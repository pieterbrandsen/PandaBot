{
    "env": {
        "browser": false,
        "es2021": true,
        "screeps/screeps": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "screeps",
        "import",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "mjs": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
          ],
          "prettier/prettier": "error",
          "arrow-body-style": "off",
          "prefer-arrow-callback": "off"
    },
    "settings": {
    }
}
